programa
{
	
	funcao inicio()
	{
		escreva("Área do Triângulo")
		inteiro base, altura

		escreva("Informe a base do Triângulo: ")
		leia(base)

		escreva("Informe a altura do Triângulo: ")
		leia(altura)

		escreva("A área do triângulo é: " + base * altura / 2)
		
	}
}
